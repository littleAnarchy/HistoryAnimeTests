<UserControl x:Class="HistoryTestsApp.WindowControls.StartWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HistoryTestsApp.WindowControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="../Resources/вступний екран.png"/>
            </Border.Background>
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="OnStart"
                    Style="{StaticResource StartButton}" Background="Transparent" FontSize="48" Foreground="Blue"  Cursor="Hand" Margin="25">
                <Button.Content>
                    <TextBlock TextDecorations="Underline">У гру</TextBlock>
                </Button.Content>
            </Button>
        </Border>
    </Grid>
</UserControl>
