<UserControl x:Class="HistoryTestsApp.WindowControls.GameMenuTwoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HistoryTestsApp.WindowControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="../Resources/фон(нова гра).png"></ImageBrush>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Style="{StaticResource ButtonBack}" HorizontalAlignment="Left" Click="OnButtonBackClick"/>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="Історія освіти" Click="OnSubject1Open"/>
            <Button Content="ІСЦ / ІАЦ" Click="OnSubject2Open"/>
            <Button Content="Всяка фігня" Click="OnSubject3Open"/>
        </StackPanel>
    </Grid>
</UserControl>
